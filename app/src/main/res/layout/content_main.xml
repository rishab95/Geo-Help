<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.android.rishab.geohelp.ui.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:id="@+id/service">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:text="START LOCATION SERVICE"
        android:textSize="18dp"
        android:background="@color/startback"
        android:textColor="@color/icons"
        android:id="@+id/start_service"
        android:layout_marginTop="30dp"
        android:elevation="3dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="10dp" />

    <Button

        android:layout_width="160dp"
        android:layout_height="100dp"
        android:text="STOP LOCATION SERVICE"
        android:textSize="18dp"
        android:textColor="@color/icons"
        android:background="@color/sendback"
        android:id="@+id/stop_service"
        android:elevation="3dp"
        android:layout_alignTop="@+id/start_service"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="CREATE MESSAGE TO SEND "
        android:textSize="24dp"
        android:id="@+id/text_message"
        android:textColor="@color/icons"
        android:background="@color/textback"
        android:elevation="3dp"
        android:layout_above="@+id/send_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="24dp"
        android:textColor="@color/icons"
        android:text="SEND EMERGENCY MESSAGE"
        android:id="@+id/send_button"
        android:background="@color/stopback"
        android:elevation="3dp"
        android:layout_marginBottom="38dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imageView2"
        android:src="@drawable/placeholder"
        android:layout_below="@+id/start_service"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />


</RelativeLayout>
