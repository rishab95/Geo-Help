<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.rishab.secure2.ui.login.CreateAccountActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:background="@android:color/white"
        android:ems="10"
        android:id="@+id/edit_text_username_create"
        android:layout_marginTop="127dp"
        android:hint="@string/hint_enter_username"
        android:padding="@dimen/edit_text_padding"
        android:textColor="@color/black"
        android:textColorHint="@color/dark_grey"
        android:textSize="@dimen/login_buttons_text_size"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/edit_text_email_create"
        android:hint="@string/hint_enter_email"
        android:textColorHint="@color/dark_grey"
        android:padding="@dimen/edit_text_padding"
        android:textColor="@color/black"
        android:background="@android:color/white"
        android:textSize="@dimen/login_buttons_text_size"
        android:layout_below="@+id/edit_text_username_create"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:inputType="textPassword"
        android:ems="10"
        android:background="@android:color/white"
        android:hint="@string/hint_enter_password"
        android:padding="@dimen/edit_text_padding"
        android:textColor="@color/black"
        android:textColorHint="@color/dark_grey"
        android:textSize="@dimen/login_buttons_text_size"
        android:id="@+id/edit_text_password_create"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edit_text_email_create"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:id="@+id/btn_create_account_final"
        android:layout_marginTop="10dp"
        android:background="@color/primary"
        android:layout_below="@+id/edit_text_password_create"
        android:onClick="onCreateAccountPressed"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/btn_create_account_final"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_already_have_account"
            style="@style/LoginCreateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_already_have_account"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/tv_sign_in"
            style="@style/LoginCreateTextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onSignInPressed"
            android:text="@string/button_sign_in"
            android:textColor="@color/accent"/>
    </LinearLayout>



</RelativeLayout>
